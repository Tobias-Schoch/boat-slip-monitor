# Database
DATABASE_URL=postgresql://website_monitor:password@localhost:5432/website_monitor

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id

# SMTP (Email)
