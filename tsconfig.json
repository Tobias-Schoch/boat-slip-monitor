{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@boat-monitor/shared": ["./packages/shared/src"],
      "@boat-monitor/database": ["./packages/database/src"],
      "@boat-monitor/monitor": ["./packages/monitor/src"],
      "@boat-monitor/web": ["./packages/web/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
