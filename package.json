{
  "name": "website-change-monitor",
  "version": "1.0.0",
  "private": true,
  "description": "24/7 Monitoring system for tracking changes on websites with intelligent detection and multi-channel notifications",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "migrate": "npm run migrate --workspace=@website-monitor/database",
    "monitor": "npm run dev --workspace=@website-monitor/monitor",
    "web": "npm run dev --workspace=@website-monitor/web"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
